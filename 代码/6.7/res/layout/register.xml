<?xml version="1.0" encoding="UTF-8"?>

<TableLayout 
    android:id="@+id/loginForm" 
    android:layout_height="match_parent" 
    android:layout_width="match_parent" 

    xmlns:android="http://schemas.android.com/apk/res/android">


<TableRow>

<TextView 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:textSize="10pt" 
    android:text="姓名:"/>

<!-- 输入用户名的文本框 -->


<EditText 
    android:id="@+id/sel_name"
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:selectAllOnFocus="true" 
    android:hint="请填写您的姓名"/>

</TableRow>



<TableRow>

<TextView 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:textSize="10pt" 
    android:text="昵称:"/>

<!-- 输入用户名的文本框 -->


<EditText 
    android:id="@+id/sel_faln"
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:selectAllOnFocus="true" 
    android:hint="请填写您的昵称"/>

</TableRow>



<TableRow>

<TextView 
     android:layout_height="wrap_content" 
     android:layout_width="match_parent"
     android:textSize="10pt" 
     android:text="密码:"/>

<!-- 输入密码的文本框 -->


<EditText 
     android:id="@+id/sel_pword"
     android:layout_height="wrap_content"
     android:layout_width="match_parent" 
     android:hint="请填写登陆密码" 
     android:password="true"/>

</TableRow>


<TableRow>

<TextView 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:textSize="10pt" 
    android:text="专业:"/>

<!-- 输入电话号码的文本框 -->


<EditText 
    android:id="@+id/sel_major"
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:selectAllOnFocus="true" 
    android:hint="请填写您的所在专业" />
</TableRow>


<TableRow>

<TextView 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:textSize="10pt" 
    android:text="电话:"/>

<!-- 输入电话号码的文本框 -->


<EditText 
    android:id="@+id/sel_phone"
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:selectAllOnFocus="true" 
    android:hint="请填写您的联系电话" 
    android:phoneNumber="true"/>
</TableRow>

<TableRow>

<TextView 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:textSize="10pt" 
    android:text="性别:"/>

<!-- 输入电话号码的文本框 -->


<EditText 
    android:id="@+id/sel_sex"
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:selectAllOnFocus="true" 
    android:hint="请填写您的性别" />

</TableRow>
<TableRow>

<TextView 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:textSize="10pt" 
    android:text="地址:"/>

<!-- 输入电话号码的文本框 -->


<EditText 
    android:id="@+id/sel_daddr"
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:selectAllOnFocus="true" 
    android:hint="请填写您的默认地址" />
</TableRow>


<TableRow>

<TextView 
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:textSize="10pt" 
    android:text="口味:"/>

<!-- 输入用户名的文本框 -->


<EditText 
    android:id="@+id/sel_like"
    android:layout_height="wrap_content" 
    android:layout_width="match_parent" 
    android:selectAllOnFocus="true" 
    android:hint="请填写您的口味"/>

</TableRow>


<Button
    android:id="@+id/btn_submit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="提交" />

</TableLayout>